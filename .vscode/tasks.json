{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label":"build",
            "dependsOn":[
                "cmake-config",
                "ninja-build"
            ],
            "group": "build"
        },
        {
            "label":"cmake-config",
            "type":"shell",
            "command":"cmake",
            "args":[
                "-B",
                "build",
                "-G",
                "Ninja"
            ],
            "group":"build"
        },
        {
            "label":"ninja-build",
            "command":"ninja",
            "args":[
                "-C",
                "build"
            ]
        },
        {
            "label":"download",
            "type":"shell",
            "command":"openocd",
            "args":[
                "-f",
                "cmsis-dap.cfg",
                "-f",
                "stm32h7x.cfg",
                "-c",
                "program ./build/Debug/PYRo.elf verify exit reset"
            ],
            "group":"build"
        }
    ]
    
}